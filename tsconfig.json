{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es2021",
    "lib": ["es2021"],
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"]
}
